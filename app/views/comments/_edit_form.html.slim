  .mb-2
    = f.text_area :body, rows: 3, class: "w-full border border-gray-600 rounded p-2", placeholder: "Edit your commentâ€¦"

  .flex.gap-3.mt-2
    = f.submit "Update", class: "bg-green-600 text-sm px-4 py-1 rounded hover:bg-green-700"
    = link_to "Cancel", project_path(project), data: { turbo_frame: "_top" }, class: "text-sm text-gray-400 hover:text-white"
